
@{
    Layout = null;
}

@using db_final.Models;
@model string

<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <title>PlanEve | Service Provider Login</title>
    <link rel="stylesheet" href="~/Content/stylesheets/SignupAndLogin_stylesheet.css">

    <script type="text/javascript">

        function checkData() {
            var uname = document.getElementById("un").value;
            var pass = document.getElementById("pas").value;


            if (pass == "" || uname=="") {
                alert("Please Enter All Fields");
                return false;
            }
            if (pass.length < 6) {
                alert("Password should be at least 6 characters long");
                return false;
            }
            return true;
        }
    </script>

</head>
<body>
    <form class="formContainer" method="post" onsubmit="return checkData();" action="../Home/LoginServiceProvider">
        <h1 class="formContainerHeading">Login - Service Provider</h1>
        <input type="text" placeholder="Username" id="un" name="username">
        <input type="password" placeholder="Password" id="pas" name="password">
        <input type="submit" placeholder="Sign-in" >
        <br />
        <br />
        <p style="color: red; font-style: italic; font-family: 'Trebuchet MS'; font-size: 15px; margin: 3px;">@Model</p>
        <br />
        <br />
        <p class="signupText">Don't have an account?</p>
        <a class="signupLink" href="~/Home/SP_SignupPage">Click here to Sign-up </a>
        <p class="signupText">and Start Providing Services</p>
    </form>

</body>
</html>
