
@{
    Layout = null;
}
@model  string

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/stylesheets/SignupAndLogin_stylesheet.css">
    <title>DJ</title>
    <script type="text/javascript">

         function checkfornullvalues() {
             var djn = document.getElementById("DJname").value;
             var up = document.getElementById("updprice").value;
             var ud = document.getElementById("upddiscount").value;

             if (djn == "") {
                 alert("Please Enter DJ Name");
                 document.getElementById('DJname').style.backgroundColor = "red";
                 document.getElementById('DJname').focus();
                 return false;
             }
             else if (up == "")
             {
                 alert("Please Enter Updated Price ");
                 document.getElementById('updprice').style.backgroundColor = "red";
                 document.getElementById('updprice').focus();
                 return false;
             }
             else if (ud == "") {
                 alert("Please Enter Updated Discount ");
                 document.getElementById('upddiscount').style.backgroundColor = "red";
                 document.getElementById('upddiscount').focus();
                 return false;
             }
             else {
                 document.getElementById("updDJform").action = "../Home/UpdateDJ";
             }
         }
    </script>
</head>
<body>
    <div>
        <form class="formContainer" id="updDJform" name="updDJform" method="post">
            <h1 class="formContainerHeading">Update DJ</h1>
            <p style="color: white; font-style: normal; font-family: 'Trebuchet MS'; font-size: 15px; margin: 3px;">Enter DJ Name that needs to be updated in the following textbox</p>
            <input type="text" placeholder="DJ Name" id="DJname" name="DJname" />
            <br />
            <input type="text" placeholder="Update Price" id="updprice" name="updprice" />
            <br />
            <input type="text" placeholder="Update Discount" id="upddiscount" name="upddiscount" />
            <br />
            <input type="submit" value="Update" onclick="checkfornullvalues()" />
            <p style="color: red; font-style: italic; font-family: 'Trebuchet MS'; font-size: 15px; margin: 3px;">@Model</p>
            <a class="signupLink" href="~/Home/DJsBySp">Click here to view registered DJ </a>
        </form>
    </div>
</body>
</html>
